<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.congwutab.CongwuActivity"
    android:orientation="vertical"
    android:background="@color/backgray">

    <include layout="@layout/back_layout"/>
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/search"
        android:background="@color/white"/>
    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/banner_wuliu"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="物流公司推荐:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
            <com.example.compete6.util.MyGridView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:numColumns="4"
                android:id="@+id/mygridview"
                android:background="@drawable/border_radius"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="其他物流公司推荐:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"/>
            <com.example.compete6.util.MyListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mylistview_wuliu"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>