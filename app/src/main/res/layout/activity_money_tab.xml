<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.moneytab.MoneyTabActivity"
    android:orientation="vertical"
    android:background="@color/backgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_top">
        <include layout="@layout/back_layout"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/linear_top"
        android:id="@+id/rg_yun">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="中国移动"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/rb_yd"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="中国电信"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/rb_dx"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="中国联通"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/rb_lt"/>

    </RadioGroup>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/lineas"
        android:id="@+id/iv_history"
        android:layout_alignParentRight="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/rg_yun">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="手机号码："
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:id="@+id/et_phone"
                        android:phoneNumber="true"/>
            </LinearLayout>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="查询"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/btn_check"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/teal_200"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.example.compete6.util.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mylistview_phone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>