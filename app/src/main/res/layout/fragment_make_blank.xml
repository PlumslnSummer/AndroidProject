<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".make.MakeBlankFragment"
    android:orientation="vertical"
    android:background="@color/backgray">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/banner_make"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="养老机构推荐"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                />
            <include layout="@layout/make_item"/>
            <include layout="@layout/make_item"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="健康评估"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:drawableRight="@drawable/next"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/tv_jiangkang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="预约养老院"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:drawableRight="@drawable/next"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/tv_yuyueyl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="平台监测"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:drawableRight="@drawable/next"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/tv_pingtai"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="巡检记录"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:drawableRight="@drawable/next"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/tv_xunjian"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="集中监测"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:drawableRight="@drawable/next"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/tv_jizhong"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>